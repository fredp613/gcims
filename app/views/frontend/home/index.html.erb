
<% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %>">
          <%= value  %>
    </div>
<% end %>
            
<% if user_signed_in? %>
<% if Application.by_user(current_user).count == 0 %>

  <div style='margin-top:5%;'>
