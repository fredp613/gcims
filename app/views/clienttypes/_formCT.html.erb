<%= simple_form_for new_client_clienttypes_path(@clienttype) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :id, :label=>"Select client type",
    collection: Clienttype.all, :input_html=>{name: "clienttype"}  %>
   </div>

   <% if @client  %>
     <%= f.input :client_id, as: :hidden, :input_html=>{value: @client, name: "client"} %>
   <% end %>

	  <div class="form-actions">
	    <%= f.button :submit, :label=>"Save", :class=>'btn btn-primary btn-small' %>
	  </div>
 
<% end %>
