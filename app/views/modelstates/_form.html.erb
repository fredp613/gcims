<%= simple_form_for(@modelstate) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user, label_method: :full_name %>
    <%= f.input :state %>
    <%= f.input :object %>
    <%= f.input :position, as: :integer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
