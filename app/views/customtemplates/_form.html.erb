<%= simple_form_for(@customtemplate) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.association :customtemplatetype, label_method: :ct_type %>
    <%= f.input :name %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
