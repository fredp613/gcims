<h3> PRAS Tree</h3>

<fieldset>
<legend>Filter by fiscal years</legend>



<div id='fy_search'>
<%= simple_form_for productservicelines_path, :method => 'get', :html => { :class => 'form-horizontal' } do |f|  %>
    
  start year:
  <div class='datepicker_year input-append date' data-date-format='yyyy' data-date-viewmodel='months'>

    <input class='span10' type='text' readonly='' name='start_year' value=<%= params[:start_year] %>  >
    <span class='add-on'>
      <i class='icon-calendar'></i>
    </span>
  </div> 

  end year:
  <div class='datepicker_year input-append date' data-date-format='yyyy' data-date-viewmodel='months' >
    <input class='span10' type='text' readonly='' name='end_year' value=<%= params[:end_year] %> >
    <span class='add-on'>
      <i class='icon-calendar'></i>
      
    </span>            

  </div>
  <%= f.submit "Search", :class=>'btn btn-primary' %>
  </div>

    
  
   
  <% end %>
</div> 
</fieldset>

<fieldset>

<legend>Departmental Programs (tree)</legend>

<ul class='tree'>
<% @productservicelines.each do |psl| %> 
  <li class='icon-folder-close'><%= render 'psl', :psl=>psl %><br>
    <ul style='display:none;'><% psl.subservicelines.each do |ssl|%>
      <li class='icon-folder-close'><%= render 'ssl', :ssl=>ssl %><br> 
        <ul><% ssl.summarycommitments.each do |sc|%>  
           <li class='icon-folder-close'><%= render 'sc', :sc=>sc %><br>
              <ul><% sc.commitmentitems.each do |ci|%>                
                <li class='icon-folder-close'><%= render 'ci', :ci=>ci %><br></li>
              <% end %>
              </ul>
           </li>
           <% end %> 
        </ul>
      </li>  
      <% end %>           
  </ul>
 </li>
 <% end %>
</ul>

</fieldset>

