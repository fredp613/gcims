<h3> PRAS Tree</h3>



<fieldset>
<legend>Filter by fiscal years</legend>

<div id='fy_search'>
<%= simple_form_for productservicelines_path, :method => 'get', :html => { :class => 'form-horizontal' } do |f|  %>
    
  start year:
  <div class='datepicker_year input-append date' data-date-format='yyyy' data-date-viewmodel='months'>

    <input class='span10' type='text' readonly='' name='start_year' value=<%= params[:start_year] %>  >
    <span class='add-on'>
      <i class='icon-calendar'></i>
    </span>
  </div> 

  end year:
  <div class='datepicker_year input-append date' data-date-format='yyyy' data-date-viewmodel='months' >
    <input class='span10' type='text' readonly='' name='end_year' value=<%= params[:end_year] %> >
    <span class='add-on'>
      <i class='icon-calendar'></i>
      
    </span>            

  </div>
  <%= f.submit "Search", :class=>'btn btn-primary' %>
<% end %>



  
</fieldset>
</div>

<div id='pras_tree' class='row-fluid'>
  <%= render 'pras_tree', :productservicelines => @productservicelines %>
</div>


<div class='row' style='padding-left:2%'>
<%= link_to 'Add Branch', new_productserviceline_path, :class=>'btn btn-info' %>
</div>


<div class="modal fade" id="myModal" style='display:none;'>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">
          
        </div>
        <!--<div class="modal-footer">
          <a href="#" class="btn">Close</a>
          <a href="#" class="btn btn-primary">Save changes</a>
        </div> -->
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->   

<script type="text/javascript">
$element = $(document).find('.datepicker_year')

  $element.datepicker({
    autoclose: 'true',
    format: 'yyyy',
    viewMode: 'years',
    minViewMode: 'years'
  });

</script>
       
