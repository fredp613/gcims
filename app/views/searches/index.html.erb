

<div class='row'>
  <p><h3>Quick Search</h3></p>
<%= form_tag searches_path, :action=>'searches/index', :remote=>true, :method=>'get', :id=>'searchForm'  do |f|  %>
  


  <div class='input-append'>
  
    <% if @query %>
    <%= text_field_tag :search_field, @query%>  
     <% else %>
    <%= text_field_tag :search_field, "", placeholder: 'Search anything'%>  
      <% end  %>
    

    <%= button_tag(:type=>:submit, :class=>'btn search', :style=>'margin-bottom:5px') do %>
        <i class='icon-search'></i>
    <% end %>

    <%= button_tag(:type=>:submit,  :name=>'reset', :class=>'btn btn-danger', :style=>'margin-bottom:5px') do %>
          <i class='icon-remove'></i>
    <% end %>

    

  </div>    
  <%= link_to "Click here for advanced search", advancedsearch_searches_path, :style=>'font-style:oblique;' %>

  <div id='search_results_container'>

    <%= render 'search_results_container' %>
    
  </div>

  <% if allow? "clients", "new" %>
  <br><br>    <p>
        <%= link_to "Add Client", new_client_clienttypes_path, :class=>'btn btn-info', :id=>'newCT' %>
      </p>
  <% end %>
   

</div>
  

<% end %>

</div>


<%= render 'shared/modal_html' %>



  







 