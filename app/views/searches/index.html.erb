


<p><h3>Quick Search</h3></p>


<%= render 'qSearch' %>


<div id='table_container' >
  <div class='loader'>
  </div>

  <div id='results'>


  <% if !params[:create] %>

  <ul id='result_pills_container' class="nav nav-pills" data-tabs="tabs">
   <%= render 'result_pills' %>
    
  </ul>

  <div class="tab-content">



    <div class="tab-pane active" id="clients">
    <% if !@clients.blank? %>  
    <%= render 'clients' %>
    <% else %>
      <strong>Your search did not yield any clients</strong>
    <% end %>
    </div>

    <div class="tab-pane" id="projects">
    <% if !@project_final.blank? %>
    <%= render 'projects' %>
    <% else %>
    <strong>Your search did not yield any projects</strong>
    <% end %>
    </div>

    <% if allow? "clients", "new" %>
    <p>
      <%= link_to "Add Client", new_client_clienttypes_path, :class=>'btn btn-info', :id=>'newCT' %>
    </p>
    <% end %>

  </div>

  <% end %>


  </div>
</div>

<%= render 'shared/modal_html' %>

 