<%= simple_form_for @summarycommitment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :sc_name, label: 'Summary Commitment (EN)' %>
  <%= f.input :active %>
  <%= f.input :subserviceline_id, :as => :hidden %>

    <% if @summarycommitment.new_record? %>
      <%= f.simple_fields_for :commitmentitems do |builder| %>
          <fieldset>
          <legend>Commitment Item</legend>
          <%= builder.input :ci_name, :label => "Commitment Item (EN)" %>
      </fieldset>
      <% end %>
    <% end %>



      <fieldset>
    <legend>Fiscal Years</legend>
  <%= f.input :fiscalyear_ids, :label=>"Select fiscal year(s)", collection: Fiscalyear.all(order: 'fy'), :selected =>
  :fiscalyear_ids, :label_method => lambda { |fy| "#{fy.fy}" }, as: :check_boxes %>
  </fieldset>

    
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  summarycommitments_path, :class => 'btn' %>
    </div>
<% end %>
