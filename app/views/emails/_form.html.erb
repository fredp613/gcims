<%= simple_form_for(@email) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <% if !@email.new_record? %>
  <%= f.input :client_id, as: :hidden %>
  <% else  %>
  <%= f.input :client_id, as: :hidden, :input_html=>{value: @client} %>
  <% end  %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
