<%= simple_form_for(@customfield) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customtemplate %>
    <%= f.input :type %>
    <%= f.input :name %>
    <%= f.input :class %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
