<%= simple_form_for(@customfield) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :field_type, collection: @customfield.types %>
    <%= f.input :field_name %>
    <%= f.input :field_label %>
    <%= f.input :field_class %>
    <%= f.input :required %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
