

    <b>Type</b>
    <%= @client.clienttype.name %><br>
<p class='contact_info'>
  <b>Email(s) <%= link_to "", new_client_email_path(@client), :class=>'icon icon-plus-sign black' %></b><br>
    
    <% @client.emails.each do |email| %>
      <%= email.email %>
      <%= email.type %>
      <%= link_to '', edit_client_email_path(@client, email), :class=>'icon icon-pencil black' %>
      <%= link_to '', email, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'icon icon-remove-sign red'%><br>
    <% end %>
  </p>
  
    <p class='contact_info'>    
    <b>Website(s) <%= link_to '', new_client_website_path(@client), :class=>'icon icon-plus-sign black' %></b><br>    
