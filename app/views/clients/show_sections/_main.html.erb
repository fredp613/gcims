      <%= website.website %>
       <%= link_to '', edit_client_website_path(@client, website), :class=>'icon icon-pencil black' %>
       <%= link_to '', website, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'icon icon-remove-sign red'%><br>
