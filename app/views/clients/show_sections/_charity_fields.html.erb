<%= simple_form_for @client, :input_html=>{:id=>'frmCharity'}, :remote=>true do |f| %>
  <%= f.error_notification %>

 <div class="form-inputs">
    <%= f.input :registeredcharity, as: :hidden, :input_html=>{value: '1'} %>
    <%= f.simple_fields_for :charity do |charity| %>
      <%= charity.input :registrationnumber %>
      <%= charity.input :registrationdate, as: :string,
           :input_html=>{ :class=>'datepicker', value: @client.charity.registrationdate } %> 
      <%= charity.input :nested_from_client, as: :hidden, :input_html=>{value: "yes"} %>
    <% end %>
  </div>

  <%= hidden_field_tag 'show', true %>
  <div class="form-actions">
    <%= f.button :submit, "Save changes",  :id=>'submitCharity' %>            
  </div>

<% end %>

<script type="text/javascript">
(function() {

$element = $(document).find('.datepicker')

$element.datepicker({
  autoclose: 'true',
  format: 'yyyy-mm-dd'
});

})();
</script>
