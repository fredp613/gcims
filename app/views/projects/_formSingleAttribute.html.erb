<%= simple_form_for(@project, :remote=>true)  do |f| %>
 
	


	<%= f.input :updating_unique_attribute, as: :hidden %>
	
	<% if @project.updating_unique_attribute == "projectname" %>
		<%= f.input :projectname, :label=>false %> 
	<% elsif @project.updating_unique_attribute == "projectdesc"  %>
		<%= f.input :projectdesc, :input_html=>{:rows=>'8', :style=>'width:500px'} %>
	<% elsif @project.updating_unique_attribute == "startdate"  %>		
		
		<%= date_picker :startdate, f,  @project.startdate, "Start Date", @project.errors, 'under' %>
		
	<% else%>
		<%= date_picker :enddate, f,  @project.enddate, "End Date", @project.errors,'under' %>
	<% end %>

	<br>

 
        <%= f.button :submit, "save", class: 'btn-small btn-success', style: 'margin-top:-35px;' %>
 

<% end %>

<script type="text/javascript">

$element = $(document).find('.datepicker')

  $element.datepicker({
    autoclose: 'true',
   format: 'yyyy-mm-dd'
  });

</script>