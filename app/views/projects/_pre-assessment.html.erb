<fieldset>
 	<legend>Financial Coding </legend>
	<% @project.applications.each do |app| %>
	    Application: <strong><%= app.applicationtype.name %></strong><br>
		Product service line: <strong>
		<%= app.commitmentitem.summarycommitment.subserviceline.productserviceline.psl_name %></strong><br>
		Sub service line: <strong><%= app.commitmentitem.summarycommitment.subserviceline.ssl_name %></strong><br>
		Summary Commitment: <strong><%= app.commitmentitem.summarycommitment.sc_name %></strong><br>
		Commitment Item: <strong><%= app.commitmentitem.ci_name %></strong><br>
		
		<% if allow? :projects, :edit  %> 
			<%= link_to "change", edit_application_path(app, :pras=>true), name: 'pras', 
	 		:class=>'btn btn-info btn-small' %>
 		<% end %>

	<% end %>

 </fieldset><br>

 <% if !@project.projectcontacts.blank?  %>
 <fieldset>
 	<legend>Project contact and signing authority</legend>	 	
	 	 <table class='table table-hover'>
	 	 	<thead>
	 	 	 <tr>
	 	 		<th>Contact Name</th>
	 	 		<th>Authority?</th>
	 	 		<% if allow? :projects, :edit  %> 
		 	 		<th>Edit</th>
		 	 		<th>Remove</th>
	 	 		<% end %>
	 	 	 </tr>
	 	 	</thead>
	 	 	<tbody>
	 	 	 <% @project.projectcontacts.each do |pc| %>
	 	 	 <tr>
	 	 		<td><%= pc.contact.fullname %></td>
	 	 		<td>
	 	 			<% if pc.authority == true %>
	 	 				<span class='icon-ok'></span>
	 	 			<% end %>
	 	 		</td>
	 	 		<% if allow? :projects, :edit  %> 
		 	 		<td><%= link_to '', edit_project_projectcontact_path(@project,pc), :class=>'icon-pencil' %></td>
		 	 		<td><%= link_to '', pc, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'icon-minus-sign red' %> </td>
	 	 		<% end %>
	 	 	</tr>
	 	 	 <% end  %>
	 	 	</tbody>
	 	 </table>
 	<br>

 <% if allow? :projects, :edit  %> 	
	<% if !@ddl.blank?  %>
		 	<%= link_to "Click here to add additional project contact(s)", new_project_projectcontact_path(@project), :class=>'btn btn-info btn-small' %>
		 	<% else %>
		 	<%= link_to "Click here to add new contact", new_project_contact_path(@project, :client_id=>@project.client_id), :class=>'btn btn-info btn-small' %>
		 	<% end  %>
	 <% else  %>
	 	<% if @contacts.blank? %>
	 		<%= link_to "Click here to add new client/project contact", new_project_contact_path(@project, :client_id=>@project.client_id), :class=>'btn btn-info btn-small' %>
	 	<% else %>
	 	<%= link_to "Click here to add project contact", new_project_projectcontact_path(:project_id=>@project), :class=>'btn btn-info btn-small' %>
	 	<% end %>
	 <% end  %>
<% end %>

 </fieldset>
