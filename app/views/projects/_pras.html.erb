
<%= f.simple_fields_for :applications do |application| %>

<fieldset>

	<legend>Main Information</legend>
		<%= application.input :corporate_file_number %>
		<%= application.input :applicationtype_id, as: :hidden, :input_html=>{value: 1} %>
		<%= application.input :requested, :wrapper => :prepend do %>
	    <%= content_tag :span, "$", :class => "add-on" %>
	    <%= application.input_field :requested, :style=>'width:180px;' %>
	    <%= application.input :responsible_official, as: :hidden, :input_html=>{value: current_user.id } %>
	 <% end %>

</fieldset>

<fieldset style='margin-top:-40px;'>
		
		<legend>Financial Coding</legend>

<%= application.input :productserviceline, label: 'Product Service Line', collection: Productserviceline.all, :label_method => lambda { |psl| "#{psl.psl_name}" }  %> 		

	<%= application.input :subserviceline do %>
		<%= application.grouped_collection_select :subserviceline, Productserviceline.order(:psl_name),
		:subservicelines, :psl_name, :id, :ssl_name, include_blank: true %>
	<% end %>

	<%= application.input :summarycommitment do %>
		<%= application.grouped_collection_select :summarycommitment, Subserviceline.order(:ssl_name),
		:summarycommitments, :ssl_name, :id, :sc_name, include_blank: true %>
	<% end %>

	<%= application.input :commitmentitem_id do %>
		<%= application.grouped_collection_select :commitmentitem_id, Summarycommitment.order(:sc_name),
		:commitmentitems, :sc_name, :id, :ci_name, include_blank: true %>
	<% end %>
<% end %>

</fieldset>


