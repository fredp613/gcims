
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :last_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <div class="form-inputs">
    <%= f.input :role_id, collection: Role.all, value_method: :id, label_method: :role, include_blank: true %>
  </div>

  <div class="form-inputs">
    <%= f.input :password %>
  </div>

  <div class="form-inputs">
    <%= f.input :password_confirmation %>
  </div>

 



  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
