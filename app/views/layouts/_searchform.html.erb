	<%= f.text_field "Search", placeholder: 'Search anything'%>  
	<%= button_tag(:type=>:submit, :class=>'btn', :style=>'margin-bottom:5px') do %>
	  <i class='icon-search'></i>
	<% end %>
<% end %>